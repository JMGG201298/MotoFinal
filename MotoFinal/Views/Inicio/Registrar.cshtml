                        </select>
                    </div>
                    <div class="form-group">
                        <label for="txtFechaNacimientoRepartidor">Fecha de nacimiento: </label>
                        <input id="txtFechaNacimientoRepartidor" name="fechaNacimiento" type="date" class="form-control" value="@if (ViewBag.selec == "R") { @Model.fechaNacimiento} "/>
                        @if (ViewBag.selec == "R") { @Html.ValidationMessageFor(x => x.fechaNacimiento, null, new { @class = "badge badge-danger" })}
                    </div>
                    <div class="form-group">
                        <label for="txtTelefonoRepartidor">Telefono: </label>
                        <input id="txtTelefonoRepartidor" name="telefono" type="tel" class="form-control" value="@if (ViewBag.selec == "R") {@Model.telefono}"/>
                        @if (ViewBag.selec == "R") { @Html.ValidationMessageFor(x => x.telefono, null, new { @class = "badge badge-danger" })}
                    </div>
                    <button type="submit" class="btn btn-primary" id="btnRegistrarRepartidor">Registrarse</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{

