@using MotoFinal.Models
@model List<Establecimiento>
@{
    ViewBag.Title = "Tiendas";
    Layout = "~/Views/Shared/_LayoutTiendas.cshtml";
}

@section estiloDentro{
    <link rel="stylesheet" href="~/Contenido/estilos/TiendasCss.css" />
}

<div class="col-8 col-lg-10">
    <div class="row" id="filaTiendas">
        @{
            for (int i = 0; i < Model.Count; i++)
            {
                <div data-value="@Model[i].idEstablecimiento" class="col-6 col-md-4 col-lg-2 cartaTienda">
                    <div class="card-body cuerpo-carta">
                        <img class="imgLogo" src="~/Contenido/imagenes/5936.jpg" />
                        <h6 class="card-title titulo-carta">@Model[i].nombre</h6>
                    </div>
                </div>
            }
        }

    </div>
</div>

@section ScriptsDentro{
    <script src="~/Contenido/Javascript/Tiendasjs.js"></script>
}

